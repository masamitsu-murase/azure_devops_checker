{
    "manifest_version": 3,
    "name": "Azure DevOps PR Checker",
    "version": "0.10.0",
    "description": "Extension to check Pull Request in Azure DevOps.",
    "icons": {
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "96": "icons/icon96.png"
    },
    "default_locale": "ja",
    "background": {
        "service_worker": "js/background/service_worker.js"
    },
    "action": {
        "default_icon": {
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "96": "icons/icon96.png"
        },
        "default_title": "Azure DevOps PR Checker",
        "default_popup": "html/popup.html"
    },
    "options_ui": {
        "page": "html/options.html",
        "open_in_tab": true
    },
    "permissions": [
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "https://dev.azure.com/*"
    ],
    "web_accessible_resources": []
}