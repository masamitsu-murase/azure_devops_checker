{
    "manifest_version": 2,
    "name": "Azure DevOps PR Checker",
    "version": "0.5.0",
    "description": "Extension to check Pull Request in Azure DevOps.",
    "icons": {
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "96": "icons/icon96.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "azure_devops_pr_checker@masamitsu.murase.jp",
            "strict_min_version": "69.0",
            "update_url": "https://masamitsu-murase.github.io/azure_devops_checker/update_link.json"
        }
    },
    "default_locale": "ja",
    "background": {
        "scripts": [
            "js/common/browser-polyfill.min.js",
            "/js/common/azure_devops.js",
            "js/background/main.js"
        ]
    },
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "96": "icons/icon96.png"
        },
        "default_title": "Azure DevOps PR Checker",
        "default_popup": "html/popup.html"
    },
    "options_ui": {
        "page": "html/options.html",
        "open_in_tab": true,
        "chrome_style": false
    },
    "permissions": [
        "storage",
        "https://dev.azure.com/*"
    ],
    "web_accessible_resources": []
}